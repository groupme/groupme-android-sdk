<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.groupme.demo"
      android:versionCode="1"
      android:versionName="1.0">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application android:label="demo" android:icon="@drawable/ic_launcher_groupme">
        <activity android:name="GroupMeDemo" android:theme="@android:style/Theme.Light.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- GroupMe Client Library Activities -->
        <activity android:name="com.groupme.sdk.activity.AuthorizeActivity" android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity android:name="com.groupme.sdk.activity.PinEntryActivity" android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity android:name="com.groupme.sdk.activity.GroupCreateActivity" android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity android:name="com.groupme.sdk.activity.AddContactActivity" android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity android:name="com.groupme.sdk.activity.GroupDetailActivity" android:theme="@android:style/Theme.Light.NoTitleBar" />
    </application>
    
</manifest> 
